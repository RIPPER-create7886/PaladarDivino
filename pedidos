<script>
    let total = 0;
    let items = [];

    function agregar(nombre, precio) {
        items.push(nombre + " ($" + precio + ")");
        total += precio;
        document.getElementById('listaPedido').value = items.join("\n");
        document.getElementById('totalPrecio').innerText = total;
    }

    function finalizarPedido(e) {
        e.preventDefault();
        alert("¬°Pedido Enviado a Cocina!\nTotal: $" + total);
        // Reiniciar
        total = 0; items = [];
        document.getElementById('listaPedido').value = "";
        document.getElementById('totalPrecio').innerText = "0";
    }
</script>

